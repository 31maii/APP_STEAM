<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/clipboard"
            android:text=" Task"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/nanum4"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/btnMakeTask"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/subcolor_2"
            android:background="@drawable/circle_add"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layoutTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/border_rec"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        >



    </LinearLayout>


    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>