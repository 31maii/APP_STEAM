<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/border_rec_thin">

                <TextView
                    android:id="@+id/tvMemberName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="홍길동"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanum4"
                    android:gravity="center|left"
                    />

                <RadioGroup
                    android:id="@+id/rgAttend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rAttend"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="출석"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanum3"
                        android:textSize="13dp"
                        android:background="@drawable/radiobutton_design_01"
                        android:button="@null"
                        android:gravity="center"/>

                    <RadioButton
                        android:id="@+id/rLate"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="지각"
                        android:fontFamily="@font/nanum3"
                        android:textSize="13dp"
                        android:background="@drawable/radiobutton_design_01"
                        android:textColor="#000000"
                        android:button="@null"
                        android:gravity="center"/>

                    <RadioButton
                        android:id="@+id/rAbsence"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="결석"
                        android:fontFamily="@font/nanum3"
                        android:textSize="13dp"
                        android:background="@drawable/radiobutton_design_01"
                        android:textColor="#000000"
                        android:button="@null"
                        android:gravity="center"/>

                </RadioGroup>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>