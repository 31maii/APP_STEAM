<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nanum4"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:columnCount="2"
            android:rowCount="7"
            android:layout_gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum3"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="17dp"
                android:gravity="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_id_editText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="6~10글자의 영문/숫자"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum3"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="17dp"
                android:gravity="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_pw_editText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="6~10글자의 영문/숫자"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum3"
                android:text="비밀번호 확인"
                android:textColor="#000000"
                android:textSize="17dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_pw_check_editText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="6~10글자의 영문/숫자"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum3"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="17dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_name_editText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="최대 10자 입력 가능"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum3"
                android:text="전화번호"
                android:textColor="#000000"
                android:textSize="17dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_phone_editText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="11"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="ex) 01012345678"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum3"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="17dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_email_editText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="ex) abc@steam.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum3"
                android:text="생년월일"
                android:textColor="#000000"
                android:textSize="17dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_birth_editText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="6"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="6"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="ex) 010101"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

        </GridLayout>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#24019D"
            android:fontFamily="@font/nanum3"
            android:textSize="13dp"
            android:text="회원가입"
            android:textColor="#ffffff"
            android:background="@drawable/button_design_05" />
    </LinearLayout>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>