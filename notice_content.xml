<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/megaphone"
            android:fontFamily="@font/nanum4"
            android:gravity="center|left"
            android:text=" 공지사항"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnNModify1"
            android:text="수정"
            android:fontFamily="@font/nanum3"
            android:layout_gravity="center"
            android:backgroundTint="#24019D"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnNDelete1"
            android:fontFamily="@font/nanum3"
            android:layout_gravity="center"
            android:backgroundTint="#24019D"
            android:textSize="12dp"
            android:text="삭제"
            android:textColor="#ffffff"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/textNoticeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18dp"
        android:background="@drawable/border_rec"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNTitle1"
            android:text="제목 표시할 곳"
            android:fontFamily="@font/nanum4"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvnWriter2"
                android:text="홍길동"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/nanum3"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/button_design_05"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvntype2"
                android:text="일반"
                android:textSize="13dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanum3"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/button_design_05"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvnDate2"
                android:text="2022-11-28 11:26:54"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanum2"
                android:textColor="@color/subcolor_2"
                android:padding="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/subcolor_2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="1.5dp"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvnContent2"
                android:text="공지 내용이 표시됨"
                android:textSize="15dp"
                android:padding="5dp"
                android:fontFamily="@font/nanum3"
                android:textColor="@color/black"/>

        </LinearLayout>




    </LinearLayout>
    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />






</LinearLayout>