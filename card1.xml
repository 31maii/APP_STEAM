<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rec_thin"
                android:padding="1dp"
                android:orientation="horizontal">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_columnSpan="4"
                        android:layout_gravity="fill_horizontal"
                        android:text="토마토익쟁이"
                        android:fontFamily="@font/nanum4"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/study"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="# 스터디"
                        android:fontFamily="@font/nanum2"
                        android:textSize="13dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/subcolor_3"/>

                    <TextView
                        android:id="@+id/toeic"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:text="# 토익"
                        android:fontFamily="@font/nanum2"
                        android:layout_marginRight="10dp"
                        android:textSize="13dp"
                        android:textColor="@color/subcolor_3"/>

                    <TextView
                        android:id="@+id/person"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:drawableLeft="@drawable/ic_groups"
                        android:fontFamily="@font/nanum2"
                        android:text=" 4/6"
                        android:textSize="13dp"
                        android:gravity="center|left"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/subcolor_3"/>

                    <ImageView
                        android:id="@+id/lock"
                        android:layout_column="3"
                        android:layout_row="1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/unlock"/>

                </GridLayout>

                <ImageButton
                    android:id="@+id/btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/chevron_right"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>