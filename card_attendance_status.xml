<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/border_rec_thin">

                <TextView
                    android:id="@+id/memberName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanum4"
                    android:gravity="center|left"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출석:"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:fontFamily="@font/nanum3"
                        android:gravity="center|left"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvMemberAttendRate1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0 %"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:fontFamily="@font/nanum3"
                        android:gravity="center|left"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지각:"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:fontFamily="@font/nanum3"
                        android:gravity="center|left"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvMemberLateRate1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0 %"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:fontFamily="@font/nanum3"
                        android:gravity="center|left"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결석:"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:fontFamily="@font/nanum3"
                        android:gravity="center|left"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvMemberAbsenceRate1"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="0 %"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:fontFamily="@font/nanum3"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>



                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>