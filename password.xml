<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="비밀번호 찾기"
        android:background="@color/maincolor"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/nanum4"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디를 입력하세요"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:fontFamily="@font/nanum4"
        android:gravity="center|left"
        />
    <EditText
        android:id="@+id/edtID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:fontFamily="@font/nanum3"
        android:background="@drawable/edittext_design_02"
        android:theme="@style/AppTheme"
        android:inputType="text"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호를 입력하세요"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:fontFamily="@font/nanum4"
        android:gravity="center|left"
        />
    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:fontFamily="@font/nanum3"
        android:background="@drawable/edittext_design_02"
        android:theme="@style/AppTheme"
        android:inputType="phone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="생년월일을 입력하세요"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:fontFamily="@font/nanum4"
        android:gravity="center|left"
        />
    <EditText
        android:id="@+id/edtBirth"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:fontFamily="@font/nanum3"
        android:background="@drawable/edittext_design_02"
        android:theme="@style/AppTheme"
        android:inputType="date"
        />

    <Button
        android:id="@+id/btnFindPW"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="비밀번호 찾기"
        android:layout_gravity="center"
        android:textSize="13dp"
        android:fontFamily="@font/nanum3"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/maincolor"
        android:textColor="@color/white"
        android:background="@drawable/button_design_05"
        />

    <TextView
        android:id="@+id/txtPW"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:gravity="center"
        android:fontFamily="@font/nanum4"
        />
    </LinearLayout>

</LinearLayout>