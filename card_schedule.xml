<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_rec_thin"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvSStartTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ hh:mm"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/nanum2"
                    android:layout_gravity="center"
                    android:textColor="#3c3c3c"
                    android:gravity="center|left"/>

                <TextView
                    android:id="@+id/txttttt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/nanum2"
                    android:layout_gravity="center"
                    android:textColor="#3c3c3c"
                    android:gravity="center|left"/>

                <TextView
                    android:id="@+id/tvSFinishTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hh:mm ]"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/nanum2"
                    android:layout_gravity="center"
                    android:textColor="#3c3c3c"
                    android:gravity="center|left"/>

                <TextView
                    android:id="@+id/tvSOwner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동:"
                    android:textSize="13dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/nanum3"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:gravity="center|left"/>

                <TextView
                    android:id="@+id/tvSName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="스케쥴 명 (10자)"
                    android:textSize="13dp"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/nanum3"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:gravity="center|left"/>

                <Button
                    android:id="@+id/btnSModify"
                    android:layout_width="56dp"
                    android:layout_height="33dp"
                    android:text="수정"
                    android:textSize="11dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/nanum2"
                    android:backgroundTint="#24019D"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/btnSDelete"
                    android:layout_width="56dp"
                    android:layout_height="33dp"
                    android:text="삭제"
                    android:textSize="11dp"
                    android:fontFamily="@font/nanum2"
                    android:backgroundTint="#24019D"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>