<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="회원정보 수정"
        android:background="@color/maincolor"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/nanum4"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">




        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:columnCount="2"
            android:rowCount="7"
            android:layout_gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum4"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edtModifyID"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum4"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edtModifyPW1"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="6~10글자의 영문/숫자"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum4"
                android:text="비밀번호 확인"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edtModifyPW2"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="6~10글자의 영문/숫자"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum4"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edtModifyName"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="최대 10자 입력 가능"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum4"
                android:text="전화번호"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edtModifyPhone"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="11"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="ex) 01012345678"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum4"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edtModifyEmail"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="10"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="ex) steam@steam.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum4"
                android:text="생년월일"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/edtModifyBirth"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_row="6"
                android:layout_column="1"
                android:background="@drawable/edittext_design_02"
                android:ems="6"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:hint="ex) 010101"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:theme="@style/AppTheme"/>

        </GridLayout>


    </LinearLayout>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>