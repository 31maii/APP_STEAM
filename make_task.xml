<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="이름"
        android:textSize="17dp"
        android:fontFamily="@font/nanum4"
        android:textColor="#000000"
        android:padding="5dp"
        />
    <EditText
        android:id="@+id/edtTaskName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:background="@drawable/edittext_design_02"
        android:layout_marginTop="3dp"
        android:textSize="15dp"
        android:fontFamily="@font/nanum3"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:theme="@style/AppTheme"
        android:ems="20"
        android:inputType="text"
        android:hint="최대 20자 입력 가능"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="시작일"
        android:textSize="17dp"
        android:fontFamily="@font/nanum4"
        android:textColor="#000000"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_design_02"
        android:paddingRight="5dp"
        android:layout_marginTop="3dp"
        >
        <TextView
            android:id="@+id/txtTaskStartDate"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="@font/nanum3"
            android:layout_gravity="center"
            android:padding="10dp"
            />
        <ImageButton
            android:id="@+id/btnChoiceTaskStartDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/calendar"
            android:backgroundTint="@color/subcolor_2"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="마감일"
        android:textSize="17dp"
        android:fontFamily="@font/nanum4"
        android:textColor="#000000"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_design_02"
        android:paddingRight="5dp"
        android:layout_marginTop="3dp"
        >
        <TextView
            android:id="@+id/txtTaskEndDate"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:padding="10dp"
            />
        <ImageButton
            android:id="@+id/btnChoiceTaskEndDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:fontFamily="@font/nanum3"
            android:backgroundTint="@color/subcolor_2"
            android:background="@drawable/calendar"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="내용"
        android:fontFamily="@font/nanum4"
        android:textSize="17dp"
        android:textColor="#000000"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/edtTaskContent"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_design_02"
        android:ems="150"
        android:fontFamily="@font/nanum3"
        android:hint="최대 150자 입력 가능"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:theme="@style/AppTheme" />
    <Button
        android:id="@+id/btnEnrollTask"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="등록"
        android:fontFamily="@font/nanum3"
        android:backgroundTint="#24019D"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        />
    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>