<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_rec_thin"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvMemoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum4"
                        android:text="제목"
                        android:textColor="#000000"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnMemoModify"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:text="수정"
                        android:textSize="11dp"
                        android:layout_marginRight="3dp"
                        android:fontFamily="@font/nanum3"
                        android:backgroundTint="#24019D"
                        android:textColor="#ffffff"/>

                    <Button
                        android:id="@+id/btnMemoDelete"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:text="삭제"
                        android:textSize="11dp"
                        android:fontFamily="@font/nanum3"
                        android:backgroundTint="#24019D"
                        android:textColor="#ffffff"/>

                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/tvMemoContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nanum3"
                            android:gravity="center|left"
                            android:textColor="#000000"
                            android:padding="3dp"
                            android:textSize="13dp"/>
                    </LinearLayout>
                </ScrollView>
                <TextView
                    android:id="@+id/tvMemoDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum2"
                    android:gravity="center|right"
                    android:text="2022.12.10  10:22"
                    android:padding="3dp"
                    android:textColor="@color/subcolor_3"
                    android:textSize="12dp"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>