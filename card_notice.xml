<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rec_thin"
                android:padding="3dp"
                android:orientation="horizontal">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/nTitle1"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_columnSpan="4"
                        android:layout_gravity="fill_horizontal"
                        android:text="공지사항 제목"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/nanum4"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="작성자: "
                        android:textSize="12dp"
                        android:fontFamily="@font/nanum2"
                        android:padding="1dp"
                        android:gravity="center"
                        android:textColor="@color/subcolor_3"
                        />

                    <TextView
                        android:id="@+id/nWriter1"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:text="홍길동"
                        android:textSize="12dp"
                        android:layout_marginRight="13dp"
                        android:fontFamily="@font/nanum2"
                        android:padding="1dp"
                        android:gravity="center"
                        android:textColor="@color/subcolor_3"/>

                    <TextView
                        android:id="@+id/nType1"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:text="중요 공지"
                        android:textSize="12dp"
                        android:layout_marginRight="13dp"
                        android:fontFamily="@font/nanum2"
                        android:padding="1dp"
                        android:gravity="center"
                        android:textColor="@color/subcolor_3"/>

                    <TextView
                        android:id="@+id/nTime1"
                        android:layout_column="3"
                        android:layout_row="1"
                        android:text="2022-11-27 10:53:27"
                        android:textSize="12dp"
                        android:fontFamily="@font/nanum2"
                        android:padding="1dp"
                        android:textColor="@color/subcolor_3"/>



                </GridLayout>

                <ImageButton
                    android:id="@+id/btnNReadMore1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/chevron_right"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>