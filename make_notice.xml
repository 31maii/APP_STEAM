<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/nanum4"
        android:padding="5dp"
        />
    <EditText
        android:id="@+id/edtNoticeName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:fontFamily="@font/nanum3"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="15dp"
        android:inputType="text"
        android:ems="20"
        android:hint="최대 20자까지 입력 가능"
        android:background="@drawable/edittext_design_02"
        android:theme="@style/AppTheme"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:fontFamily="@font/nanum4"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        />
    <RadioGroup
        android:id="@+id/rGroupNoticeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <RadioButton
            android:id="@+id/rBtnNormal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/normal"
            android:textSize="15dp"
            android:layout_weight="1"
            android:checked="true"
            android:fontFamily="@font/nanum3"
            android:background="@drawable/radiobutton_design_01"
            android:textColor="#000000"
            android:button="@null"
            android:gravity="center"
            />
        <RadioButton
            android:id="@+id/rBtnImportant"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/important"
            android:textSize="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanum3"
            android:background="@drawable/radiobutton_design_01"
            android:textColor="#000000"
            android:button="@null"
            android:gravity="center"
            />

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/content"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:fontFamily="@font/nanum4"
        android:padding="5dp"
        />
    <EditText
        android:id="@+id/edtNoticeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/limit"
        android:background="@drawable/edittext_design_02"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:fontFamily="@font/nanum3"
        android:textSize="15dp"
        android:textColor="#000000"
        android:ems="500"
        android:theme="@style/AppTheme"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnEnroll"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enroll"
            android:layout_margin="10dp"
            android:backgroundTint="#24019D"
            android:fontFamily="@font/nanum3"
            android:textSize="13dp"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:backgroundTint="#24019D"
            android:layout_margin="10dp"
            android:textSize="13dp"
            android:fontFamily="@font/nanum3"
            android:textColor="#ffffff"
            />

    </LinearLayout>
    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>