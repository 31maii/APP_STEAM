<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="출석"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:fontFamily="@font/nanum4"
        android:background="#24019D"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 출석 현황"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:fontFamily="@font/nanum4"
            android:gravity="center|left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/border_rec">

            <TextView
                android:id="@+id/tvMyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 홍길동"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="@font/nanum4"
                android:gravity="center|left"
                android:drawableLeft="@drawable/icon_attend"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출석:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanum3"
                    android:gravity="center|left"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvAttendanceRate1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:fontFamily="@font/nanum3"
                    android:gravity="center|left"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지각:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanum3"
                    android:gravity="center|left"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvLateRate1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:fontFamily="@font/nanum3"
                    android:gravity="center|left"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결석:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanum3"
                    android:gravity="center|left"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvAbsenceRate1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:fontFamily="@font/nanum3"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>



            </LinearLayout>

            <TextView
                android:id="@+id/tvMessage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 열심히 해보아요:D"
                android:textColor="@color/subcolor_2"
                android:textSize="14dp"
                android:fontFamily="@font/nanum3"
                android:gravity="center|left"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/arrow_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="팀 출석 현황"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:fontFamily="@font/nanum4"
                android:layout_gravity="center"
                android:gravity="center|left"
                />

            <Button
                android:id="@+id/btnAManagement"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="출석 관리"
                android:textSize="13dp"
                android:fontFamily="@font/nanum3"
                android:backgroundTint="@color/maincolor"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"/>

        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_rec">
            <LinearLayout
                android:id="@+id/layoutAttend1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/border_rec_thin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="홍길동"
                        android:textColor="#000000"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/nanum4"
                        android:gravity="center|left"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="출석:"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:fontFamily="@font/nanum3"
                            android:gravity="center|left"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="0 %"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:fontFamily="@font/nanum3"
                            android:gravity="center|right"
                            android:layout_marginRight="30dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지각:"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:fontFamily="@font/nanum3"
                            android:gravity="center|left"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="0 %"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:fontFamily="@font/nanum3"
                            android:gravity="center|right"
                            android:layout_marginRight="30dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="결석:"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:fontFamily="@font/nanum3"
                            android:gravity="center|left"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="0 %"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:fontFamily="@font/nanum3"
                            android:gravity="center|right"
                            android:layout_marginRight="15dp"/>



                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAttendDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="2022.12.10  10:30"
                android:fontFamily="@font/nanum3"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="출석 여부"
                android:fontFamily="@font/nanum3"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:textStyle="bold"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_rec"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text=" 나의 출석 현황: "
                    android:fontFamily="@font/nanum3"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/tvMyAttendance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="결석"
                    android:fontFamily="@font/nanum3"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Acode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text=" 출석 코드: "
                    android:fontFamily="@font/nanum3"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/tvACode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="000000"
                    android:fontFamily="@font/nanum3"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/edtACode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"
                android:hint="출석 코드를 입력하세요 (6글자)"
                android:fontFamily="@font/nanum3"
                android:layout_gravity="center"
                android:theme="@style/AppTheme"
                android:textColor="#000000"
                android:inputType = "number"

                />
            <Button
                android:id="@+id/btnMakeCode"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="생성"
                android:fontFamily="@font/nanum3"
                android:backgroundTint="#24019D"
                android:textSize="12dp"
                android:textColor="#ffffff"
                />

        </LinearLayout>








    </LinearLayout>








</LinearLayout>