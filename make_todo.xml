<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maincolor"
        android:text="To Do 등록"
        android:textSize="20dp"
        android:fontFamily="@font/nanum4"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="To Do"
            android:textColor="#000000"
            android:textSize="17dp"
            android:fontFamily="@font/nanum4"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            />

        <EditText
            android:id="@+id/edtTodoName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_design_02"
            android:textSize="15dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:fontFamily="@font/nanum3"
            android:layout_gravity="center"
            android:theme="@style/AppTheme"
            android:inputType="text"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="담당자"
            android:textColor="#000000"
            android:textSize="17dp"
            android:fontFamily="@font/nanum4"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            />


        <!-- 담당자 EditText로 입력받을지 Selector로 선택할 수 있게 할 것인지 DB연동 후 고민 -->
        <EditText
            android:id="@+id/edtTodoInCharge"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_design_02"
            android:textSize="15dp"
            android:textColor="#000000"
            android:fontFamily="@font/nanum3"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:theme="@style/AppTheme"
            android:inputType="text"
            />
    </LinearLayout>
    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />






</LinearLayout>