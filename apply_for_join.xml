<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="참여 신청"
        android:textSize="25dp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_circle"
        android:text=" 그룹명"
        android:textColor="#000000"
        android:fontFamily="@font/nanum5"
        android:textSize="17dp"/>


    <TextView
        android:id="@+id/tvApplyGroupName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/nanum3"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="10dp"
        android:background="@drawable/edittext_design_02"
        android:gravity="center|left"
        android:theme="@style/AppTheme"/>




    <TextView
        android:id="@+id/tvGroupCodeKey1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="3dp"
        android:drawableLeft="@drawable/ic_circle"
        android:text=" 그룹 코드 입력"
        android:textColor="#000000"
        android:fontFamily="@font/nanum4"
        android:layout_marginBottom="5dp"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/edtGroupCodeKey1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        android:textSize="15dp"
        android:background="@drawable/edittext_design_02"
        android:fontFamily="@font/nanum3"
        android:inputType="text"
        android:theme="@style/AppTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnApplyComplete1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="신청"
            android:textSize="13dp"
            android:backgroundTint="#24019D"
            android:fontFamily="@font/nanum3"
            android:padding="10dp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btnApplyCancel1"
            android:layout_width="70dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="13dp"
            android:backgroundTint="#24019D"
            android:fontFamily="@font/nanum3"
            android:padding="10dp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />







</LinearLayout>