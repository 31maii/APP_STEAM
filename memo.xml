<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#24019D">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/memo"
                android:fontFamily="@font/nanum4"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="  memo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/btnMakeMemo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/circle_add_white"
                />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/memoLayout">

            </LinearLayout>
        </ScrollView>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/homeBar_memo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_design_03"
            android:src="@drawable/ic_home"/>

        <ImageButton
            android:id="@+id/joinBar_memo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_join"
            android:background="@drawable/button_design_03"/>

        <ImageButton
            android:id="@+id/memoBar_memo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_edit_note_24"
            android:background="@drawable/button_design_03"/>

        <ImageButton
            android:id="@+id/mypageBar_memo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="@drawable/button_design_03"/>

    </LinearLayout>

</LinearLayout>